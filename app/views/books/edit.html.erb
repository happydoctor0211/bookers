<div class="editbox">
<h1 class="heading-edit">Editing Book</h1>

<% if @book.errors.any? %>
    <div class="alert alert-danger">
      <h2><%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:</h2>
      <ul>
        <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
    </div>
<% end %>

<%= form_with model:@book,local:true do |f| %>
<div class="editbox-item">
<p>Title</p>
<%= f.text_field:title %>
</div>

<div class="editbox-item">
<p>Body</p>
<%= f.text_area:body %>
</div>

<div class="editbox-item">
<%= f.submit 'Update Book' %>
<div>
<% end %>

<div class="editbox-item">
  <%= link_to "Show",book_path(@book) %> | <%= link_to "Back",books_path %></div>
</div>